<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffafea"
    >

    <Button
        android:background="#bc2193"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goButton"
        tools:text="@string/enter"
        android:textColor="#000000"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/powered"
        android:layout_centerHorizontal="true"
        android:text="@string/enter" />

    <ImageView
        android:contentDescription="@string/ushahidiImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ushahidi"
        android:id="@+id/ushahidiLogo"
        android:layout_marginBottom="7dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:contentDescription="@string/TakeImage"
        app:srcCompat="@drawable/take2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TakeBackLOgo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        tools:text="@string/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/information"
        android:textSize="20sp"
        android:textColor="#000000"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/info" />

    <TextView
        android:text="@string/powered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/powered"
        android:textColor="#000000"
        android:layout_above="@+id/ushahidiLogo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>