<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffafea"
    >

    <ImageView
        android:contentDescription="@string/ushahidiImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ushahidi"
        android:id="@+id/ushahidiLogo"
        android:layout_alignBottom="@+id/TakeBackLOgo"
        android:layout_toRightOf="@+id/goButton"
        android:layout_toEndOf="@+id/goButton" />

    <ImageView
        android:contentDescription="@string/TakeImage"
        app:srcCompat="@drawable/take2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TakeBackLOgo"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ushahidiLogo"
        android:layout_toStartOf="@+id/ushahidiLogo"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="@string/powered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/powered"
        android:textColor="#000000"

        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:layout_above="@+id/ushahidiLogo"
        android:layout_alignRight="@+id/ushahidiLogo"
        android:layout_alignEnd="@+id/ushahidiLogo" />

    <Button
        android:background="#bc2193"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goButton"
        tools:text="@string/enter"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="@string/enter" />

    <TextView
        tools:text="@string/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/information"
        android:textSize="20sp"
        android:textColor="#000000"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:layout_below="@+id/ushahidiLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:text="@string/info" />
</RelativeLayout>